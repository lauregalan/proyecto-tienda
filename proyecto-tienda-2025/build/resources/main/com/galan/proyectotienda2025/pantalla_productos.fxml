<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.image.Image?>
<BorderPane prefHeight="600.0" prefWidth="900.0" stylesheets="@estilos.css"
            xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.galan.proyectotienda2025.ProductosControlador">

    <!-- Barra lateral -->
    <left>
        <VBox id="barra-lateral" spacing="10.0" prefWidth="300.0" styleClass="sidebar">
            <children>
                <Button text="Inicio" styleClass="menu-btn" maxWidth="Infinity" onAction="#onInicioButtonClick"/>
                <Button text="Productos" styleClass="menu-btn" maxWidth="Infinity"/>
                <Button text="Ventas" styleClass="menu-btn" maxWidth="Infinity" onAction="#onVentasButtonClick"/>
                <Button text="Clientes" styleClass="menu-btn" maxWidth="Infinity" onAction="#onClienteButtonClick"/>
                <Button text="Inventario" styleClass="menu-btn" maxWidth="Infinity" onAction="#onInventarioButtonClick"/>
                <Button text="Cuotas" styleClass="menu-btn" maxWidth="Infinity" onAction="#onCuotasButtonClick"/>
                <Button text="Configuración" styleClass="menu-btn" maxWidth="Infinity"/>
            </children>
        </VBox>
    </left>

    <!-- Contenido principal -->
    <center>
        <HBox spacing="15" style="-fx-padding: 15;" prefWidth="Infinity" prefHeight="Infinity">

            <!-- Izquierda: formulario e imagen -->
            <VBox spacing="15" alignment="TOP_CENTER" prefWidth="350">
                <Text text="Producto" styleClass="titulo" />

                <TextField fx:id="txtProductoId" promptText="ID" maxWidth="Infinity" />

                <ComboBox fx:id="comboTemporada"  promptText="Temporada" maxWidth="Infinity"/>
                <ComboBox fx:id="comboMarca" promptText="Marca" maxWidth="Infinity"/>
                <ComboBox fx:id="comboPromo" promptText="Promocionable" maxWidth="Infinity"/>

                <TextField fx:id="txtProductoNombre" promptText="Nombre" maxWidth="Infinity" />
                <TextArea fx:id="txtProductoDesc" promptText="Descripción" prefRowCount="1" maxWidth="Infinity"/>

                <HBox spacing="10" alignment="CENTER_LEFT" maxWidth="Infinity">
                    <Label text="Stock:"/>
                    <Spinner fx:id="spinnerStock" prefWidth="100" />
                </HBox>

                <TextField fx:id="txtPrecioCompra" promptText="Precio compra" maxWidth="Infinity" />
                <TextField fx:id="txtPrecioVenta" promptText="Precio venta" maxWidth="Infinity" />

                <HBox spacing="10" alignment="CENTER" maxWidth="Infinity">
                    <Button text="Añadir" fx:id="btnAnadir" maxWidth="Infinity" onAction="#onAgregarButtonClick"/>
                    <Button text="Resetear" fx:id="btnResetear" maxWidth="Infinity" />
                    <Button text="Borrar" fx:id="btnBorrar" maxWidth="Infinity"/>
                    <Button text="Actualizar" fx:id="btnActualizar" maxWidth="Infinity" />
                </HBox>

            </VBox>

            <!-- Derecha: tabla productos -->
            <VBox spacing="10" prefWidth="550" VBox.vgrow="ALWAYS">
                <Text text="Lista de Productos" styleClass="titulo" />
                <TableView fx:id="tablaProductos2" VBox.vgrow="ALWAYS" prefHeight="Infinity">
                    <columns>
                        <TableColumn fx:id="colId2" text="ID" prefWidth="60"/>
                        <TableColumn fx:id="colNombre2" text="Nombre" prefWidth="150"/>
                        <TableColumn fx:id="colDesc2" text="Descripcion" prefWidth="150"/>
                        <TableColumn fx:id="colCompra2" text="Precio compra" prefWidth="150"/>
                        <TableColumn fx:id="colVenta2" text="Precio venta" prefWidth="150"/>
                        <TableColumn fx:id="colMarca2" text="Marca" prefWidth="100"/>
                        <TableColumn fx:id="colTemporada2" text="Temporada" prefWidth="100"/>
                        <TableColumn fx:id="colStock2" text="Stock" prefWidth="80"/>
                        <TableColumn fx:id="colPromo2" text="Promo" prefWidth="80"/>
                    </columns>
                </TableView>
            </VBox>
        </HBox>
    </center>
</BorderPane>
